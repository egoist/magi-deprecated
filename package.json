{
  "name": "magi",
  "version": "0.4.0",
  "description": "Magically turn markdown file into static website.",
  "repository": {
    "url": "egoist/magi",
    "type": "git"
  },
  "main": "dist/lib/index.js",
  "files": [
    "dist"
  ],
  "bin": "dist/bin/magi.js",
  "scripts": {
    "test:cov": "jest --coverage && npm run lint",
    "test": "jest && npm run lint && npm run build",
    "lint": "xo",
    "build": "gulp build",
    "dev": "gulp",
    "docs": "node ./dist/bin/magi.js build --out docs/index.html"
  },
  "author": "egoist <0x142857@gmail.com>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "env": {
      "test": {
        "presets": [
          "es2015",
          "stage-2"
        ],
        "plugins": [
          "transform-runtime"
        ]
      }
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "babel-jest": "^19.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.1.11",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "cssnano": "^3.10.0",
    "eslint-config-rem": "^3.0.0",
    "github-markdown-css": "^2.4.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-chmod": "^2.0.0",
    "gulp-named": "^1.0.0",
    "gulp-postcss": "^6.3.0",
    "jest-cli": "^18.1.0",
    "postcss-smart-import": "^0.6.9",
    "xo": "^0.17.1"
  },
  "xo": {
    "extends": "rem",
    "esnext": true,
    "envs": [
      "jest"
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "detab": "^2.0.0",
    "express": "^4.15.0",
    "hast-util-to-html": "^3.0.0",
    "html-matter": "^0.1.1",
    "mdast-util-to-hast": "^2.4.0",
    "mkdirp": "^0.5.1",
    "mz": "^2.6.0",
    "nofetch": "^0.1.0",
    "prismjs": "^1.6.0",
    "pug": "^2.0.0-beta11",
    "remark": "^7.0.0",
    "remark-html": "^13.0.2",
    "remark-slug": "^4.2.2",
    "unist-builder": "^1.0.2",
    "unist-util-find-all-between": "^1.0.1",
    "unist-util-remove": "^0.2.1",
    "unist-util-visit": "^1.1.1",
    "yargs": "next"
  }
}
